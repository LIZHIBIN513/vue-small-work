@import "../../common/css/mixin.styl"
.menu
  .menu-list
    position fixed
    top 0
    bottom 0
    flex 0 0 285px
    left -285px
    width 285px
    color #313131
    transition all .3s ease
    z-index 99
    background url(../../assets/Bitmap.png) no-repeat left top
    .menu-header
      width 100%
      height 230px
      padding-top 68px
      text-align center
      color: #fff
      .menu-avatar
        box-sizing border-box
        width 100px
        height auto
        border-radius 50%
        border 7px solid #2979FF
        padding 15px
        opacity 1
      .author
        padding-top 16px
        padding-bottom 10px
        font-size 32px
      .author-site
        width 150px
        background url(../../assets/Pin.png) no-repeat left center
        padding-left 16.5px
        background-size 9px 100%
        margin 0 auto
      .menu-title
        font-size 14px
        line-height 28px
        font-weight 500
    &.show
      transform translateX(285px)
    .menu-ul
      margin 0
      overflow hidden
      padding 0
      .item
        display block
        font-size 14px
        padding 10px 13px
        text-align left
        text-indent 1px
        line-height 15px
        color #a6adb3
        font-weight 700
        border-1px(#40474a);
        &last-child
          margin-bottom 50px
        &before
          color #2c3e50
        .line
          border-top 1px solid #d4d4d4
        .menu-icon
          display inline-block
          width 30px
          height 30px
          background-color #383c40
          border-radius 50%
          vertical-align top
          text-align center
          .iconfont
            color #999
            line-height 30px
            font-weight 700
        &.active
          color #01aef3
          .menu-icon
            background-color #01aef3
            .iconfont
              color #fff
        .menu-text
          display inline-block
          font-size 22px
          line-height 32px
          vertical-align top
          margin-left 10px
          font-weight 700
          color: fff
        .menu-new
          display inline-block
          width 30px
          height 30px
          background-color #d81229
          border-radius 50%
          vertical-align top
          text-align center
          float right
          span
            color #fff
            font-size 15px
            line-height 30px
            font-weight 500
