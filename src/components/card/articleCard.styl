.card
  padding 10px
  background: #fff
  -moz-box-shadow:0 0 11px #ced7dc;
  -webkit-box-shadow:0 0 11px #ced7dc;
  box-shadow:0 0 11px #ced7dc;
  margin-top: 10px
  margin-bottom: 10px
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  .list-info
    color: #7C858A
    font-size: 10px
    width 100%
    height 40px
    line-height 40px
    img.avatar
      width: 20px
      border-radius: 50%
      vertical-align middle
    span.author
      display inline-block
      margin-left 10px
    .time
      color: #7C858A
      float right
  .title-image
    width 100%
    height 100px
  h1.title
    margin-top 5px
    margin-bottom 5px
    font-size: 16px
    line-height: 18px
    color: #222527
  p.summary
    font-size: 12px
    color: #7C858A
    line-height: 16px
    text-overflow: ellipsis
    max-height: 46px
    overflow: hidden;
    -webkit-line-clamp: 3
    text-align: justify



