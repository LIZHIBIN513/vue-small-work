.header
  position fixed
  top 0
  right 0
  left 0
  z-index 10
  width 100%
  min-height 50px
  font-size 1.8px
  line-height 50px
  background-color #3385ff
  color #ffffff
  text-align center
  display table
  box-shadow 0 1px 0 rgba(0, 0, 0, .1), 0 1px 2px rgba(0, 0, 0, .1)
  .title
    min-height 50px
    position absolute
    margin 0
    text-align center
    white-space nowrap
    right 100px
    left 100px
    font-size 16px
    width auto
    overflow hidden
    text-overflow ellipsis
    z-index 2
    font-weight 500

